<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/baseBack"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/baseBack"
        android:elevation="6dp" />

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="6dp">

        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white">

            <io.dcloud.h52927aa1.Weiget.RoundImageView
                android:id="@+id/roundHead"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/head_nor" />

            <ImageView
                android:id="@+id/iv_imagelaoshu"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/roundHead"
                android:visibility="gone"
                android:src="@drawable/imagelaoshu"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guanzhu"
                android:layout_alignLeft="@+id/tv_title"
                android:layout_below="@+id/roundHead"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/iv_guanzhu"
                android:text="666666"
                android:maxLines="1"
                android:layout_alignBottom="@+id/iv_guanzhu"
                android:layout_below="@id/roundHead"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/roundHead"
                android:layout_toRightOf="@id/roundHead"
                android:background="@drawable/titleback"
                android:layout_marginLeft="15dp"
                android:text="哈哈哈"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/roundHead"
                android:layout_marginLeft="5dp"
                android:text="想念张家源小可爱"
                android:textColor="@color/blue"
                android:layout_toRightOf="@+id/tv_title"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_LV"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/roundHead"
                android:layout_alignEnd="@+id/roundHead"
                android:layout_alignRight="@+id/iv_head2"
                android:background="@drawable/ivbac"
                android:gravity="center"
                android:text="23"
                android:textColor="#F7AC3F"
                android:textSize="11sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/roundHead"
                android:text="老熟,点我登陆"
                android:textColor="#496A9C" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@mipmap/right" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/rl_login"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/baseBack" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rl_login"
            android:layout_marginTop="1dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_jianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:text="这家伙很懒,什么也没留下" />

        </RelativeLayout>


    </RelativeLayout>
    　

    <LinearLayout
        android:id="@+id/ll_group"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_head"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_xuanshang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/xuanshang"
            android:gravity="center"
            android:text="我的悬赏"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/my_qiangshang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/qiangshang"
            android:gravity="center"
            android:text="我的抢赏"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/my_tiwen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/tiwen"
            android:gravity="center"
            android:text="我的提问"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/my_huida"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/huida"
            android:gravity="center"
            android:text="我的回答"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_zixun"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_guanxipiao"
        android:layout_marginTop="0.1dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="我的咨询" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/right" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_guanzhu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_zixun"
        android:layout_marginTop="0.1dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="我的关注" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_shoucang"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_guanzhu"
        android:layout_marginTop="0.1dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="我的收藏" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_renzheng"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_shoucang"
        android:layout_marginTop="0.1dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="老熟认证" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_shezhi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_renzheng"
        android:layout_marginTop="0.1dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="账号设置" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_guanxipiao"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_group"
        android:layout_marginTop="0.1dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="我的关系票" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/right" />

        <ImageView
            android:id="@+id/iv_piao"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_right"
            android:src="@drawable/piao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/iv_piao"
            android:maxLength="8"
            android:text="0"
            android:textSize="13sp" />


    </RelativeLayout>

</RelativeLayout>