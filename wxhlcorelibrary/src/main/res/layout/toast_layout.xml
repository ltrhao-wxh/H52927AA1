<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/toast_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/image_nor"/>
    <TextView
        android:gravity="center"
        android:id="@+id/toast_tv"
        android:textColor="@color/white"
        android:layout_marginLeft="0dp"
        android:layout_below="@id/toast_iv"
        android:layout_toRightOf="@id/toast_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一段很长的测试文字"/>

</RelativeLayout>